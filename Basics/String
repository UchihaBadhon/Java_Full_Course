package org.example;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       String str;
       str = "Hola amigo";
       int sze = str.length(); //10
       char letter = str.charAt(0); // H
       int index = str.indexOf("l"); // 2
       int last_index = str.lastIndexOf("a"); // 5
        
       str = str.toUpperCase(); // HOLA AMIGO
       str = str.toLowerCase(); // hola amigo
       str = str.trim(); // to cutt all spaces
       str = str.replace("o", "a"); // hala amiga
        System.out.println(str);
               
    }
}
