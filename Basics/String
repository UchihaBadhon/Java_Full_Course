package org.example;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       String str;
       str = "Hola amigo";
       int sze = str.length(); //10
       char letter = str.charAt(0); // H
       int index = str.indexOf("l"); // 2
       int last_index = str.lastIndexOf("a"); // 5
        
       str = str.toUpperCase(); // HOLA AMIGO
       str = str.toLowerCase(); // hola amigo
       str = str.trim(); // to cutt all spaces
       str = str.replace("o", "a"); // hala amiga
        System.out.println(str);

// Substring is a method to extract a portion from string
// Syntex:  String_name.substring( start_index, end_index );

	String str = "HelloBold@gmail.com";
		String str2 = str.substring( 0, 9 );
		
		System.out.println(str2); // HelloBold

    }
}
